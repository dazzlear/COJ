@model COJ.Models.HomeViewModel

<div x-data="{ scrolled: false, isMenuOpen: false }"
     @@scroll.window="scrolled = (window.pageYOffset > 50)"
     class="selection:bg-[#D97706] selection:text-white">

    <nav :class="scrolled ? 'bg-[#0A1128]/80 backdrop-blur-xl py-4 shadow-2xl' : 'bg-transparent py-8'"
         class="fixed w-full z-50 transition-all duration-700 ease-in-out">
        <div class="max-w-screen-2xl mx-auto px-8 md:px-12 flex items-center justify-between">

            <a href="#home" class="flex items-center space-x-3 group">
                <div class="relative">
                    <div class="absolute -inset-1 bg-[#D97706] rounded-full blur opacity-25 group-hover:opacity-75 transition duration-1000"></div>
                    <i data-lucide="coffee" class="relative w-6 h-6 text-white transform group-hover:rotate-12 transition-transform"></i>
                </div>
                <span class="text-xl font-bold tracking-[0.3em] uppercase text-white">Cup of Joe</span>
            </a>

            <div class="hidden lg:flex items-center space-x-12">
                @foreach (var link in new[] { "Home", "Band", "Music", "Shows", "Contact" })
                {
                    <a href="#@link.ToLower()"
                       class="relative text-[11px] font-bold uppercase tracking-[0.4em] text-white/70 hover:text-white transition-colors group">
                        @link
                        <span class="absolute -bottom-2 left-0 w-0 h-px bg-[#D97706] transition-all duration-500 group-hover:w-full"></span>
                    </a>
                }
            </div>

            <div class="hidden md:block">
                <a href="#music" class="px-8 py-3 border border-white/20 hover:border-[#D97706] text-white text-[10px] font-bold uppercase tracking-[0.3em] rounded-full transition-all hover:bg-[#D97706]">
                    Listen Now
                </a>
            </div>

            <button @@click="isMenuOpen = !isMenuOpen" class="lg:hidden text-white p-2">
                <i x-show="!isMenuOpen" data-lucide="align-right" class="w-8 h-8"></i>
                <i x-show="isMenuOpen" data-lucide="x" class="w-8 h-8"></i>
            </button>
        </div>
    </nav>

    <section id="home" class="relative h-screen flex items-center justify-center overflow-hidden bg-[#0A1128]">
        <div class="absolute inset-0 z-0">
            <img src="~/img/cover.jpg" class="w-full h-full object-cover scale-105 animate-slow-zoom opacity-50" />
            <div class="absolute inset-0 bg-gradient-to-b from-[#0A1128]/80 via-transparent to-[#0A1128]"></div>
        </div>

        <div class="relative z-10 text-center max-w-4xl px-6">
            <span class="inline-block text-[#D97706] text-xs font-bold uppercase tracking-[0.6em] mb-6 animate-fade-in-up">
                Official Artist Page
            </span>
            <h1 class="text-6xl md:text-9xl font-serif italic text-white leading-tight mb-8 tracking-tighter">
                Patutunguhan <span class="block not-italic font-black uppercase text-[0.4em] tracking-[0.5em] text-white/50 mt-4">The New Era</span>
            </h1>
            <div class="flex flex-col md:flex-row items-center justify-center gap-8 mt-12">
                <div class="w-px h-16 bg-gradient-to-b from-transparent via-[#D97706] to-transparent hidden md:block"></div>
                <p class="text-white/60 max-w-xs text-sm leading-relaxed tracking-wide font-light italic">
                    Exploring the intersection of Baguio soul and modern rhythm.
                </p>
            </div>
        </div>

        <div class="absolute bottom-12 left-1/2 -translate-x-1/2 animate-bounce opacity-30">
            <i data-lucide="mouse-pointer-2" class="text-white w-5 h-5"></i>
        </div>
    </section>

    <section id="band" class="py-40 px-6 bg-[#FDF9F3]">
        <div class="max-w-screen-2xl mx-auto">
            <div class="flex flex-col lg:flex-row gap-24">
                <div class="lg:w-1/3">
                    <h2 class="text-8xl font-black tracking-tighter text-[#0A1128] opacity-10 absolute -mt-16 -ml-4 pointer-events-none">CREW</h2>
                    <h3 class="text-5xl font-bold text-[#0A1128] mb-8 relative z-10">THE <br /> LINEUP</h3>
                    <div class="w-20 h-1 bg-[#D97706] mb-12"></div>
                    <p class="text-lg text-slate-600 font-serif italic leading-relaxed">
                        A collective of storytellers from the mountains of Baguio, weaving emotions into every chord.
                    </p>
                </div>

                <div class="lg:w-2/3 grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-16">
                    @foreach (var member in Model.Members)
                    {
                        <div class="group relative flex items-end space-x-6 border-b border-black/5 pb-8 overflow-hidden">
                            <span class="text-5xl font-black text-black/5 transition-colors group-hover:text-[#D97706]/20 duration-500">
                                @member.Name.Split(' ').Last().ToUpper()
                            </span>
                            <div class="relative z-10">
                                <h4 class="text-xl font-bold text-[#0A1128] uppercase tracking-tight">@member.Name</h4>
                                <p class="text-[10px] font-bold text-[#D97706] uppercase tracking-[0.3em] mt-1">@member.Role</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>

    <section id="music" class="py-40 bg-[#0A1128] text-white relative overflow-hidden">
        <div class="absolute top-0 right-0 w-1/3 h-full bg-[#D97706]/5 -skew-x-12 transform translate-x-20"></div>

        <div class="max-w-screen-2xl mx-auto px-6 relative z-10">
            <div class="flex justify-between items-end mb-24">
                <div>
                    <h2 class="text-xs font-bold text-[#D97706] uppercase tracking-[0.5em] mb-4">Discography</h2>
                    <h3 class="text-6xl font-black tracking-tighter">DISCS.</h3>
                </div>
                <a href="#" class="hidden md:flex items-center space-x-4 text-[10px] font-bold uppercase tracking-widest hover:text-[#D97706] transition-colors">
                    <span>View All Releases</span>
                    <i data-lucide="arrow-right" class="w-4 h-4"></i>
                </a>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-16">
                @foreach (var album in Model.Discography)
                {
                    <div class="group">
                        <div class="relative aspect-square mb-10">
                            <div class="absolute inset-0 bg-black translate-y-4 blur-3xl opacity-40 group-hover:translate-y-8 transition-transform duration-700"></div>

                            <div class="relative h-full overflow-hidden rounded-sm z-10">
                                <img src="@Url.Content(album.Cover)" class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110" />
                                <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                                    <button class="w-20 h-20 bg-white/10 backdrop-blur-md rounded-full border border-white/20 flex items-center justify-center hover:bg-[#D97706] hover:border-transparent transition-all">
                                        <i data-lucide="play" class="w-8 h-8 fill-white text-white"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <h4 class="text-lg font-bold uppercase tracking-tighter mb-1">@album.Title</h4>
                        <div class="flex items-center space-x-3 text-[10px] font-bold text-white/40 uppercase tracking-widest">
                            <span>@album.Type</span>
                            <span class="w-1 h-1 bg-[#D97706] rounded-full"></span>
                            <span>@album.Year</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <section id="contact" class="py-40 px-6 bg-[#FDF9F3] relative">
        <div class="max-w-5xl mx-auto">
            <div class="relative bg-[#0A1128] rounded-[3rem] overflow-hidden shadow-[0_50px_100px_-20px_rgba(10,17,40,0.4)]">
                <div class="flex flex-col lg:flex-row">
                    <div class="lg:w-2/5 p-12 lg:p-20 bg-gradient-to-br from-[#0A1128] to-[#16213e] text-white">
                        <h3 class="text-4xl font-bold mb-8">Let's <br /> Collaborate.</h3>
                        <p class="text-white/50 font-light leading-relaxed mb-12">Available for bookings, private events, and creative partnerships.</p>

                        <div class="space-y-6">
                            <div class="flex items-center space-x-4 group cursor-pointer">
                                <div class="w-10 h-10 rounded-full border border-white/10 flex items-center justify-center group-hover:bg-[#D97706] transition-colors">
                                    <i data-lucide="mail" class="w-4 h-4"></i>
                                </div>
                                <span class="text-xs font-bold uppercase tracking-widest">hello@@coj.com</span>
                            </div>
                        </div>
                    </div>

                    <div class="lg:w-3/5 p-12 lg:p-20 bg-white">
                        <form class="space-y-8">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                                <div class="space-y-2">
                                    <label class="text-[10px] font-bold uppercase tracking-widest text-slate-400">Name</label>
                                    <input type="text" class="w-full border-b border-slate-200 py-3 focus:outline-none focus:border-[#D97706] transition-colors" placeholder="Full Name">
                                </div>
                                <div class="space-y-2">
                                    <label class="text-[10px] font-bold uppercase tracking-widest text-slate-400">Email</label>
                                    <input type="email" class="w-full border-b border-slate-200 py-3 focus:outline-none focus:border-[#D97706] transition-colors" placeholder="email@@address.com">
                                </div>
                            </div>
                            <div class="space-y-2">
                                <label class="text-[10px] font-bold uppercase tracking-widest text-slate-400">Message</label>
                                <textarea rows="3" class="w-full border-b border-slate-200 py-3 focus:outline-none focus:border-[#D97706] transition-colors resize-none" placeholder="How can we help?"></textarea>
                            </div>
                            <button class="bg-[#0A1128] text-white px-12 py-5 text-[11px] font-bold uppercase tracking-[0.3em] rounded-sm hover:bg-[#D97706] transition-all transform active:scale-95 shadow-xl">
                                Send Inquiry
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>

<style>
    @@keyframes slow-zoom {
        0% {
            transform: scale(1);
        }

        100% {
            transform: scale(1.1);
        }
    }

    .animate-slow-zoom {
        animation: slow-zoom 20s infinite alternate ease-in-out;
    }

    @@keyframes fade-in-up {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in-up {
        animation: fade-in-up 1s ease-out forwards;
    }
</style>