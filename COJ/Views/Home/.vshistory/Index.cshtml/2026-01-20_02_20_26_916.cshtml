@model COJ.Models.HomeViewModel

<div x-data="{ scrolled: false, isMenuOpen: false }"
     @@scroll.window="scrolled = (window.pageYOffset > 50)"
     class="selection:bg-[#D97706] selection:text-white bg-[#FDF9F3] text-[#0A1128]">


    <!-- NAV (headings) -->
    <nav :class="scrolled ? 'bg-[#0A1128]/95 backdrop-blur-xl py-4 shadow-2xl border-b border-white/5' : 'bg-transparent py-10'"
         class="fixed w-full z-50 transition-all duration-700 ease-in-out">
        <div class="max-w-screen-2xl mx-auto px-8 md:px-12">

            <div class="hidden lg:grid grid-cols-3 items-center">
                <div class="flex items-center space-x-10">
                    <a href="#home" class="nav-link">Home</a>
                    <a href="#band" class="nav-link">Band</a>
                    <a href="#music" class="nav-link">Music</a>
                </div>

                <div class="flex justify-center">
                    <a href="#home" class="group select-none">

                        <div x-show="!scrolled" x-cloak class="flex flex-col items-center">
                            <img src="~/img/logo.png"
                                 alt="Cup of Joe Logo"
                                 class="w-12 h-12 mb-4 transition-transform duration-700 group-hover:scale-110 group-hover:rotate-[2deg]" />
                            <span class="text-2xl font-black tracking-[0.6em] uppercase text-white leading-none drop-shadow-[0_20px_40px_rgba(0,0,0,0.35)]">
                                Cup of Joe
                            </span>
                        </div>

                        <div x-show="scrolled" x-cloak class="flex items-center gap-3">
                            <img src="~/img/logo.png"
                                 alt="Cup of Joe Logo"
                                 class="w-8 h-8 transition-transform duration-500 group-hover:scale-110" />
                            <span class="text-white font-black uppercase tracking-[0.08em] text-lg">
                                Cup of Joe
                            </span>
                        </div>

                    </a>
                </div>

                <div class="flex justify-end space-x-12 items-center">
                    <a href="#shows" class="nav-link">Shows</a>

                    <a href="#contact"
                       class="group inline-flex items-center gap-2.5 px-6 py-2 rounded-full border border-[#D97706] text-[#D97706]
                              text-[10px] font-bold uppercase tracking-[0.3em] transition-all duration-500
                              hover:bg-[#D97706] hover:text-white shadow-[0_18px_55px_-28px_rgba(217,119,6,0.6)]
                              relative overflow-hidden">
                        <span class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 bg-[radial-gradient(circle_at_30%_30%,rgba(255,255,255,0.35),transparent_55%)]"></span>
                        <i data-lucide="sparkles" class="relative w-4 h-4"></i>
                        <span class="relative z-10">Connect</span>
                    </a>
                </div>
            </div>

            <div class="flex lg:hidden justify-between items-center">
                <span class="text-xl font-black tracking-[0.3em] uppercase text-white drop-shadow-[0_20px_40px_rgba(0,0,0,0.35)]">
                    Cup of Joe
                </span>
                <button @@click="isMenuOpen = !isMenuOpen"
                        class="text-white rounded-full w-11 h-11 grid place-items-center bg-white/5 border border-white/10 backdrop-blur-md transition-transform duration-500 active:scale-95">
                    <i x-show="!isMenuOpen" data-lucide="menu" class="w-6 h-6"></i>
                    <i x-show="isMenuOpen" data-lucide="x" class="w-6 h-6"></i>
                </button>
            </div>
        </div>

        <div x-show="isMenuOpen" x-cloak x-transition.opacity.duration.300ms
             class="fixed inset-0 bg-[#0A1128] z-40 lg:hidden">
            <div class="h-full flex flex-col items-center justify-center space-y-10 text-center px-10">
                <a href="#home" @@click="isMenuOpen=false" class="text-4xl font-black uppercase text-white hover:text-[#D97706] transition-colors">Home</a>
                <a href="#band" @@click="isMenuOpen=false" class="text-4xl font-black uppercase text-white hover:text-[#D97706] transition-colors">Band</a>
                <a href="#music" @@click="isMenuOpen=false" class="text-4xl font-black uppercase text-white hover:text-[#D97706] transition-colors">Music</a>
                <a href="#shows" @@click="isMenuOpen=false" class="text-4xl font-black uppercase text-white hover:text-[#D97706] transition-colors">Shows</a>

                <a href="#contact" @@click="isMenuOpen=false"
                   class="mt-6 px-10 py-4 rounded-full bg-[#D97706] text-white font-bold uppercase tracking-widest shadow-[0_30px_80px_-35px_rgba(217,119,6,0.75)]">
                    Connect
                </a>
            </div>
        </div>
    </nav>

    <!-- HOME -->
    <section id="home" class="relative h-screen flex items-center justify-center overflow-hidden bg-[#0A1128]">
        <div class="absolute inset-0 z-0">
            <img src="~/img/cover.png" asp-append-version="true"
                 class="w-full h-full object-cover scale-105 opacity-70" />
            <div class="absolute inset-0 bg-gradient-to-b from-[#0A1128] via-black/10 to-[#0A1128]"></div>
            <div class="absolute inset-0 opacity-80 bg-[radial-gradient(circle_at_50%_30%,rgba(217,119,6,0.22),transparent_55%)]"></div>
            <div class="absolute inset-0 pointer-events-none hero-sweep opacity-25"></div>
            <div class="absolute inset-0 pointer-events-none hero-grain opacity-[0.09]"></div>
            <div class="absolute bottom-0 left-0 right-0 h-40 bg-gradient-to-t from-[#0A1128] to-transparent"></div>
        </div>

        <div class="absolute bottom-10 left-1/2 -translate-x-1/2 z-10 flex flex-col items-center gap-6">
            <p class="text-white/25 text-[10px] uppercase tracking-[0.6em] font-bold">
                UNOFFICIAL ARTIST PAGE
            </p>

            <div class="flex flex-col items-center gap-2 opacity-25 animate-scroll-bounce cursor-default select-none">
                <span class="text-[7px] uppercase tracking-[0.4em] text-white font-black">Scroll</span>
                <i data-lucide="chevron-down" class="text-white w-4 h-4"></i>
            </div>
        </div>
    </section>

    <!-- BAND -->
    <section id="band" class="relative py-40 bg-[#FDF9F3] overflow-hidden">
        <!-- animated background layers  -->
        <div class="absolute inset-0 pointer-events-none band-aurora"></div>
        <div class="absolute inset-0 pointer-events-none band-grid-drift"></div>
        <div class="absolute inset-0 pointer-events-none band-sweep"></div>

        <!-- soft watermark -->
        <div class="absolute inset-x-0 top-24 pointer-events-none select-none band-watermark">
            <p class="text-center font-black uppercase">Cup of Joe</p>
        </div>

        <div class="relative z-10 max-w-screen-2xl mx-auto px-8">
            <div class="text-center mb-24">
                <h2 class="text-[10px] font-black tracking-[0.8em] uppercase text-[#D97706] mb-4">Our Favorite OT5</h2>
                <h3 class="text-6xl font-black tracking-tighter text-[#0A1128]">MEET THE BAND</h3>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-10">
                @{
                    var index = 0;
                }
                @foreach (var member in Model.Members)
                {
                    string imgPath = $"/img/{member.Name.Split(' ')[0].ToLower()}.jpg";
                    var delay = (index % 5) * 90;
                    index++;

                    <div class="group relative flex flex-col items-center band-card-reveal"
                         style="animation-delay:@($"{delay}ms")">
                        <div class="relative w-full aspect-[3/4] overflow-hidden rounded-sm mb-6 grayscale group-hover:grayscale-0 transition-all duration-700 shadow-2xl">
                            <div class="absolute -inset-[2px] opacity-0 group-hover:opacity-100 transition-opacity duration-700 bg-[linear-gradient(135deg,rgba(217,119,6,0),rgba(217,119,6,0.55),rgba(217,119,6,0))]"></div>

                            <img src="@imgPath"
                                 onerror="this.src='https://images.unsplash.com/photo-1516280440614-37939bbacd81?q=80&w=400'"
                                 class="relative w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110" />

                            <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
                            <div class="absolute inset-0 border-[14px] border-white/0 group-hover:border-white/12 transition-all duration-700"></div>
                            <div class="absolute top-5 left-5 right-5 h-px bg-white/0 group-hover:bg-white/20 transition-all duration-700"></div>
                        </div>

                        <h4 class="text-lg font-bold uppercase tracking-tight text-[#0A1128] group-hover:tracking-[0.05em] transition-all duration-500">
                            @member.Name
                        </h4>
                        <p class="text-[9px] font-bold text-[#D97706] uppercase tracking-[0.3em] mt-2 opacity-70 group-hover:opacity-100 transition-opacity">
                            @member.Role
                        </p>
                    </div>
                }
            </div>
        </div>
    </section>


    <!-- MUSIC -->
    <section id="music" class="py-40 bg-[#0A1128] text-white overflow-hidden">
        <div class="max-w-screen-2xl mx-auto px-8">

            <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-10 mb-16">
                <div>
                    <p class="text-[10px] font-black tracking-[0.8em] uppercase text-[#D97706]">Music</p>
                    <h3 class="mt-4 text-5xl md:text-6xl font-black tracking-tighter uppercase">Discography</h3>
                    <p class="mt-4 text-sm text-white/55 max-w-2xl">
                        Stream Cup of Joe on official platforms.
                    </p>
                </div>

                <div class="hidden md:block w-32 h-px bg-[#D97706] opacity-70"></div>
            </div>

            <!-- ALBUM GRID -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-12">
                @foreach (var album in Model.Discography)
                {
                    <a href="@album.Url" target="_blank" rel="noopener noreferrer" class="group block cursor-pointer">
                        <div class="relative aspect-square bg-white/5 overflow-hidden mb-8 shadow-2xl border border-white/10 group-hover:border-[#D97706]/50
                                    transition-all duration-700 group-hover:-translate-y-3">

                            <img src="@Url.Content(album.Cover)"
                                 class="w-full h-full object-cover opacity-60 group-hover:opacity-100 transition-all duration-700" />

                            <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-700
                                        bg-[radial-gradient(circle_at_30%_25%,rgba(255,255,255,0.22),transparent_55%)]"></div>
                            <div class="absolute inset-0 bg-gradient-to-t from-black/55 via-transparent to-transparent opacity-60"></div>

                            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                                <div class="relative w-16 h-16 bg-[#D97706] rounded-full flex items-center justify-center play-pulse shadow-[0_30px_80px_-35px_rgba(217,119,6,0.85)]">
                                    <i data-lucide="play" class="fill-white w-6 h-6"></i>
                                </div>
                            </div>
                        </div>

                        <h3 class="text-xl font-bold uppercase tracking-tight transition-colors group-hover:text-[#D97706]">@album.Title</h3>
                        <p class="text-[10px] font-bold text-[#D97706] uppercase tracking-widest mt-2">@album.Type • @album.Year</p>
                    </a>
                }
            </div>

            <!-- STREAMING PLATFORMS -->
            <div x-data="{ morePlatforms: false }" class="mt-16">
                <div class="flex flex-col items-center text-center">
                    <p class="text-[9px] font-black uppercase tracking-[0.45em] text-white/45">Listen on</p>

                    <div class="mt-4 flex flex-wrap justify-center gap-3">
                        <a href="https://open.spotify.com/artist/61nn6nOoLWjVC1ER2qFAvN" target="_blank" rel="noopener" class="platform-chip">
                            <i data-lucide="music" class="w-4 h-4"></i>
                            <span>Spotify</span>
                        </a>

                        <a href="https://music.apple.com/ph/artist/cup-of-joe/1470488556" target="_blank" rel="noopener" class="platform-chip">
                            <i data-lucide="disc-3" class="w-4 h-4"></i>
                            <span>Apple Music</span>
                        </a>

                        <a href="https://music.youtube.com/channel/UCPq0kgKjpNzryoNbRp5eUyQ" target="_blank" rel="noopener" class="platform-chip">
                            <i data-lucide="youtube" class="w-4 h-4"></i>
                            <span>YouTube Music</span>
                        </a>
                    </div>

                    <button type="button"
                            @@click="morePlatforms = !morePlatforms"
                            class="mt-5 inline-flex items-center gap-2 text-[10px] font-black uppercase tracking-[0.4em] text-[#D97706] hover:text-[#f59e0b] transition-colors">
                        <span x-text="morePlatforms ? 'Less' : 'More'"></span>
                        <i data-lucide="chevron-down"
                           class="w-4 h-4 transition-transform duration-300"
                           :class="morePlatforms ? 'rotate-180' : ''"></i>
                    </button>

                    <!-- more links -->
                    <div x-show="morePlatforms" x-collapse class="mt-6">
                        <div class="flex flex-wrap justify-center gap-3">
                            <a href="https://www.deezer.com/en/artist/60687062" target="_blank" rel="noopener" class="platform-chip">
                                <i data-lucide="radio" class="w-4 h-4"></i>
                                <span>Deezer</span>
                            </a>
                            <a href="https://music.amazon.com/artists/B07P8BH48D/cup-of-joe" target="_blank" rel="noopener" class="platform-chip">
                                <i data-lucide="headphones" class="w-4 h-4"></i>
                                <span>Amazon Music</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </section>


    <!-- SHOWS -->
    <section id="shows" class="py-28 md:py-32 bg-[#FFF7ED]">
        <div class="max-w-screen-2xl mx-auto px-8">
            <div class="grid lg:grid-cols-12 gap-12 items-start">
                
                <div class="lg:col-span-7">
                    <p class="text-[10px] font-black tracking-[0.8em] uppercase text-[#D97706]">Shows</p>
                    <h3 class="mt-4 text-5xl md:text-6xl font-black tracking-tighter text-[#0A1128]">STARDUST TOUR</h3>
                    <p class="mt-4 text-sm text-slate-600 max-w-xl">
                        Official dates from the tour poster. Venues may update — especially for TBA listings.
                    </p>

                    
                    <div class="mt-10 bg-white border border-black/5 shadow-[0_25px_70px_-45px_rgba(0,0,0,0.35)] p-7">
                        <div class="flex items-start justify-between gap-6">
                            <div>
                                <p class="text-[9px] font-black uppercase tracking-[0.4em] text-slate-400">Next Show</p>
                                <h4 class="mt-3 text-2xl font-black text-[#0A1128]">Baguio</h4>
                                <p class="mt-2 text-sm font-semibold text-slate-700">University of Baguio</p>
                            </div>

                            
                            <div class="text-right">
                                <p class="text-[10px] font-black uppercase tracking-[0.4em] text-[#D97706]">
                                    February 6, 2026
                                </p>
                                <div class="mt-4 h-px w-28 bg-[#0A1128]/10 ml-auto"></div>
                            </div>
                        </div>
                    </div>

                    <!-- Table -->
                    <div class="mt-10 bg-white border border-black/5 shadow-[0_25px_70px_-45px_rgba(0,0,0,0.35)] overflow-hidden">
                        <div class="grid grid-cols-12 px-6 py-4 bg-[#0A1128] text-white">
                            <div class="col-span-4">
                                <p class="text-[9px] font-black uppercase tracking-[0.4em] opacity-80">Date</p>
                            </div>
                            <div class="col-span-8">
                                <p class="text-[9px] font-black uppercase tracking-[0.4em] opacity-80">City & Venue</p>
                            </div>
                        </div>

                        <div class="grid grid-cols-12 px-6 py-6 border-t border-black/5">
                            <div class="col-span-4">
                                <p class="text-[10px] font-black uppercase tracking-[0.4em] text-[#D97706]">March 28, 2026</p>
                            </div>
                            <div class="col-span-8">
                                <p class="text-[9px] font-black uppercase tracking-[0.35em] text-slate-400">Cebu</p>
                                <p class="mt-2 text-lg font-black text-[#0A1128]">Waterfront Cebu City Hotel & Casino, Lahug</p>
                            </div>
                        </div>

                        <div class="grid grid-cols-12 px-6 py-6 border-t border-black/5">
                            <div class="col-span-4">
                                <p class="text-[10px] font-black uppercase tracking-[0.4em] text-[#D97706]">May 9, 2026</p>
                            </div>
                            <div class="col-span-8">
                                <p class="text-[9px] font-black uppercase tracking-[0.35em] text-slate-400">Iloilo</p>
                                <p class="mt-2 text-lg font-black text-[#0A1128]">Iloilo Convention Center</p>
                            </div>
                        </div>

                        <div class="grid grid-cols-12 px-6 py-6 border-t border-black/5">
                            <div class="col-span-4">
                                <p class="text-[10px] font-black uppercase tracking-[0.4em] text-[#D97706]">May 30, 2026</p>
                            </div>
                            <div class="col-span-8">
                                <p class="text-[9px] font-black uppercase tracking-[0.35em] text-slate-400">Davao</p>
                                <p class="mt-2 text-lg font-black text-[#0A1128]">SMX Convention Center</p>
                            </div>
                        </div>

                        <div class="grid grid-cols-12 px-6 py-6 border-t border-black/5">
                            <div class="col-span-4">
                                <p class="text-[10px] font-black uppercase tracking-[0.4em] text-[#D97706]">June 13, 2026</p>
                            </div>
                            <div class="col-span-8">
                                <p class="text-[9px] font-black uppercase tracking-[0.35em] text-slate-400">Cagayan de Oro</p>
                                <p class="mt-2 text-lg font-black text-[#0A1128]">Limketkai Atrium</p>
                            </div>
                        </div>
                    </div>

                    <p class="mt-6 text-[9px] font-bold uppercase tracking-[0.45em] text-slate-500">
                        Subject to updates
                    </p>
                </div>

                <div class="lg:col-span-5 lg:pt-10">
                    <div class="bg-[#0A1128] p-4 shadow-[0_55px_140px_-70px_rgba(0,0,0,0.65)] border border-black/10">
                        <img src="~/img/stardust-tour2.jpg" asp-append-version="true"
                             alt="Stardust Tour Poster"
                             class="w-full h-auto object-contain"
                             style="image-rendering:auto;" />
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- CONTACT -->
    <section id="contact" class="py-28 bg-[#0A1128] relative overflow-hidden">
        <div class="absolute -top-32 left-1/2 -translate-x-1/2 w-[520px] h-[520px] rounded-full bg-[#D97706]/10 blur-3xl"></div>

        <div class="max-w-5xl mx-auto px-8 relative">
            <div class="bg-white/5 backdrop-blur-xl border border-white/10 shadow-[0_60px_150px_-70px_rgba(0,0,0,0.75)]">
                <div class="grid lg:grid-cols-2">
                    <div class="p-10 lg:p-14 border-b lg:border-b-0 lg:border-r border-white/10 text-white">
                        <p class="text-[10px] font-black tracking-[0.8em] uppercase text-[#D97706]">Connect</p>
                        <h3 class="mt-6 text-4xl lg:text-5xl font-black tracking-tighter leading-[1.02]">
                            LET’S STAY<br />CLOSE.
                        </h3>
                        <div class="mt-10 grid grid-cols-2 gap-3">
                            <a href="#" class="contact-chip"><i data-lucide="instagram" class="w-4 h-4"></i><span>Instagram</span></a>
                            <a href="#" class="contact-chip"><i data-lucide="facebook" class="w-4 h-4"></i><span>Facebook</span></a>
                            <a href="#" class="contact-chip"><i data-lucide="youtube" class="w-4 h-4"></i><span>YouTube</span></a>
                            <a href="#" class="contact-chip"><i data-lucide="music-2" class="w-4 h-4"></i><span>TikTok</span></a>
                        </div>
                    </div>
                    <div class="p-10 lg:p-14 bg-white">
                        <form class="space-y-8">
                            <div class="grid md:grid-cols-2 gap-8">
                                <input type="text" placeholder="NAME" class="form-input" />
                                <input type="email" placeholder="EMAIL" class="form-input" />
                            </div>
                            <textarea rows="3" placeholder="MESSAGE" class="form-input resize-none"></textarea>
                            <button class="relative overflow-hidden group bg-[#0A1128] text-white px-10 py-4 text-[10px] font-bold uppercase tracking-[0.4em] shadow-2xl">
                                <span class="relative z-10">Send Inquiry</span>
                                <div class="absolute inset-0 bg-[#D97706] translate-y-full group-hover:translate-y-0 transition-transform duration-500"></div>
                                <div class="absolute -inset-10 opacity-0 group-hover:opacity-100 transition-opacity duration-500 sheen-sweep"></div>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <style>
        /* --- ORANGE SCROLLBAR --- */
        ::-webkit-scrollbar {
            width: 10px;
        }

        ::-webkit-scrollbar-track {
            background: #0A1128;
        }

        ::-webkit-scrollbar-thumb {
            background: #D97706;
            border-radius: 10px;
            border: 3px solid #0A1128;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #f59e0b;
            }

        /* --- NAVIGATION LINKS --- */
        .nav-link {
            font-size: 10px;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: .35em;
            color: rgba(255,255,255,.9);
            position: relative;
            transition: color .35s ease, transform .35s ease;
        }

            .nav-link:hover {
                color: #D97706;
                transform: translateY(-1px);
            }

            .nav-link::after {
                content: "";
                position: absolute;
                left: 0;
                bottom: -10px;
                width: 100%;
                height: 2px;
                background: linear-gradient(90deg, rgba(217,119,6,0), rgba(217,119,6,1), rgba(217,119,6,0));
                transform: scaleX(0);
                transform-origin: center;
                transition: transform .55s cubic-bezier(.2,.8,.2,1);
            }

            .nav-link:hover::after {
                transform: scaleX(1);
            }

        /* --- SCROLL ANIMATION --- */
        @@keyframes scrollBounce {
            0%, 100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(10px);
            }
        }

        .animate-scroll-bounce {
            animation: scrollBounce 2s infinite ease-in-out;
        }

        /* --- FORM ELEMENTS --- */
        .form-input {
            width: 100%;
            padding: 14px 0;
            background: transparent;
            border: none;
            border-bottom: 1px solid #e2e8f0;
            outline: none;
            font-weight: 700;
            font-size: 14px;
            transition: border-color 0.4s, box-shadow 0.4s;
        }

            .form-input:focus {
                border-color: #D97706;
                box-shadow: 0 10px 30px -20px rgba(217,119,6,0.55);
            }

        /* --- HERO --- */
        .hero-sweep {
            background: linear-gradient(110deg, rgba(255,255,255,0) 0%, rgba(255,255,255,0.08) 35%, rgba(255,255,255,0) 70%);
            transform: translateX(-40%);
            animation: sweep 8.5s ease-in-out infinite;
        }

        @@keyframes sweep {
            0% {
                transform: translateX(-60%);
            }

            55% {
                transform: translateX(15%);
            }

            100% {
                transform: translateX(60%);
            }
        }

        .hero-grain {
