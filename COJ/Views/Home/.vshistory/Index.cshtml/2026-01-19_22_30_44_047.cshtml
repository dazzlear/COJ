@model COJ.Models.HomeViewModel

<div x-data="{ scrolled: false, isMenuOpen: false }"
     @@scroll.window="scrolled = (window.pageYOffset > 50)"
     class="selection:bg-[#D97706] selection:text-white bg-[#FDF9F3] text-[#0A1128]">

    <nav :class="scrolled ? 'bg-[#0A1128]/95 backdrop-blur-2xl py-5 shadow-2xl border-b border-white/5' : 'bg-transparent py-12'"
         class="fixed w-full z-50 transition-all duration-1000 ease-in-out">
        <div class="max-w-screen-2xl mx-auto px-10 md:px-16">

            <div class="hidden lg:grid grid-cols-3 items-center">
                <div class="flex items-center space-x-16">
                    <a href="#home" class="nav-link">Home</a>
                    <a href="#band" class="nav-link">The Band</a>
                    <a href="#music" class="nav-link">Music</a>
                </div>

                <div class="flex justify-center">
                    <a href="#home" class="flex flex-col items-center group transition-transform duration-700 hover:scale-105">
                        <img src="~/img/logo.png"
                             alt="Cup of Joe Logo"
                             class="w-10 h-10 mb-5 opacity-90 group-hover:opacity-100 transition-opacity" />
                        <span class="text-2xl font-light tracking-[0.8em] uppercase text-white leading-none">
                            Cup of Joe
                        </span>
                    </a>
                </div>

                <div class="flex justify-end space-x-16 items-center">
                    <a href="#shows" class="nav-link">Shows</a>
                    <a href="#contact"
                       class="px-10 py-3 border border-white/20 text-white text-[9px] font-bold uppercase tracking-[0.5em] rounded-full
                              hover:bg-white hover:text-[#0A1128] transition-all duration-500">
                        Connect
                    </a>
                </div>
            </div>

            <div class="flex lg:hidden justify-between items-center">
                <span class="text-lg font-light tracking-[0.4em] uppercase text-white">Cup of Joe</span>
                <button @@click="isMenuOpen = !isMenuOpen" class="text-white p-2">
                    <i x-show="!isMenuOpen" data-lucide="align-right" class="w-7 h-7"></i>
                    <i x-show="isMenuOpen" data-lucide="x" class="w-7 h-7"></i>
                </button>
            </div>
        </div>

        <div x-show="isMenuOpen" x-cloak
             x-transition:enter="transition ease-out duration-500"
             x-transition:enter-start="opacity-0 translate-y-4"
             x-transition:enter-end="opacity-100 translate-y-0"
             class="fixed inset-0 bg-[#0A1128] z-40 lg:hidden flex flex-col items-center justify-center space-y-12">
            <a href="#home" @@click="isMenuOpen=false" class="text-3xl font-light uppercase tracking-[0.3em] text-white">Home</a>
            <a href="#band" @@click="isMenuOpen=false" class="text-3xl font-light uppercase tracking-[0.3em] text-white">The Band</a>
            <a href="#music" @@click="isMenuOpen=false" class="text-3xl font-light uppercase tracking-[0.3em] text-white">Music</a>
            <a href="#contact" @@click="isMenuOpen=false" class="px-12 py-4 border border-[#D97706] text-[#D97706] text-xs uppercase tracking-[0.5em] rounded-full">Connect</a>
        </div>
    </nav>

    <section id="home" class="relative h-screen flex items-center justify-center overflow-hidden bg-[#0A1128]">
        <div class="absolute inset-0 z-0">
            <img src="~/img/cover.png" asp-append-version="true"
                 class="w-full h-full object-cover scale-110 slow-zoom opacity-30 grayscale-[20%]" />

            <div class="absolute inset-0 bg-gradient-to-b from-[#0A1128] via-transparent to-[#0A1128]"></div>
            <div class="absolute inset-0 bg-black/20"></div>
        </div>

        <div class="relative z-10 text-center space-y-8">
            <div class="w-px h-32 bg-gradient-to-b from-transparent via-white/20 to-transparent mx-auto"></div>
            <p class="text-white/30 text-[10px] uppercase tracking-[1em] font-medium animate-pulse">
                Unofficial Artist Page
            </p>
        </div>

        <div class="absolute bottom-20 left-1/2 -translate-x-1/2 opacity-20 group cursor-default">
            <p class="text-[8px] uppercase tracking-[0.8em] text-white rotate-90 origin-left ml-2 transition-all group-hover:tracking-[1.2em]">Scroll</p>
        </div>
    </section>

    <section id="band" class="py-52 bg-[#FDF9F3]">
        <div class="max-w-screen-2xl mx-auto px-10">
            <div class="flex flex-col md:flex-row justify-between items-end mb-32 border-b border-black/5 pb-12">
                <div>
                    <h2 class="text-[10px] font-bold tracking-[1em] uppercase text-[#D97706] mb-6">The Lineup</h2>
                    <h3 class="text-7xl font-light tracking-tighter text-[#0A1128] italic font-serif">A Mountain Collective.</h3>
                </div>
                <p class="text-slate-400 text-xs max-w-xs leading-loose font-light">
                    Five distinct voices from the pines of Baguio, harmonizing stories of nostalgia.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-12">
                @foreach (var member in Model.Members)
                {
                    string imgPath = $"/img/{member.Name.Split(' ')[0].ToLower()}.jpg";

                    <div class="group relative flex flex-col items-center">
                        <div class="relative w-full aspect-[4/5] overflow-hidden bg-slate-100 mb-8 shadow-2xl transition-all duration-1000 group-hover:-translate-y-4 grayscale group-hover:grayscale-0">
                            <img src="@imgPath"
                                 onerror="this.src='https://images.unsplash.com/photo-1516280440614-37939bbacd81?q=80&w=400'"
                                 class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-105" />
                            <div class="absolute inset-0 border border-black/5 opacity-100 group-hover:opacity-0 transition-opacity"></div>
                        </div>
                        <h4 class="text-base font-bold uppercase tracking-[0.2em] text-[#0A1128]">@member.Name</h4>
                        <p class="text-[8px] font-bold text-[#D97706] uppercase tracking-[0.5em] mt-3 opacity-0 group-hover:opacity-100 transition-all">@member.Role</p>
                    </div>
                }
            </div>
        </div>
    </section>

    <section id="music" class="py-52 bg-[#0A1128] text-white overflow-hidden">
        <div class="max-w-screen-2xl mx-auto px-10">
            <div class="mb-32">
                <h3 class="text-8xl font-black tracking-tighter uppercase opacity-5 select-none absolute -mt-20">SOUNDS</h3>
                <h3 class="text-6xl font-light tracking-tighter uppercase relative z-10 italic font-serif">Discography.</h3>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-20">
                @foreach (var album in Model.Discography)
                {
                    <div class="group cursor-pointer">
                        <div class="relative aspect-square mb-10 overflow-hidden shadow-2xl transition-all duration-700 group-hover:shadow-[0_40px_100px_-20px_rgba(217,119,6,0.3)]">
                            <img src="@Url.Content(album.Cover)" class="w-full h-full object-cover opacity-40 group-hover:opacity-100 transition-all duration-1000 group-hover:scale-110" />
                            <div class="absolute inset-0 bg-gradient-to-t from-[#0A1128] via-transparent to-transparent opacity-60"></div>

                            <div class="absolute bottom-8 left-8 flex items-center space-x-4 opacity-0 group-hover:opacity-100 transition-all duration-500 translate-y-4 group-hover:translate-y-0">
                                <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center text-[#0A1128]">
                                    <i data-lucide="play" class="fill-current w-4 h-4 ml-1"></i>
                                </div>
                                <span class="text-[9px] font-bold uppercase tracking-[0.4em]">Listen</span>
                            </div>
                        </div>
                        <h3 class="text-xl font-bold uppercase tracking-widest mb-2">@album.Title</h3>
                        <p class="text-[10px] font-bold text-[#D97706] uppercase tracking-[0.4em]">@album.Type • @album.Year</p>
                    </div>
                }
            </div>
        </div>
    </section>

    <section id="contact" class="py-52 bg-[#FDF9F3]">
        <div class="max-w-6xl mx-auto px-10">
            <div class="bg-[#0A1128] rounded-sm shadow-[0_60px_120px_-30px_rgba(0,0,0,0.5)] flex flex-col lg:flex-row overflow-hidden border border-white/5">

                <div class="lg:w-2/5 p-16 lg:p-24 bg-gradient-to-br from-[#0A1128] to-[#121b33] flex flex-col justify-between border-r border-white/5">
                    <div>
                        <h3 class="text-4xl font-light italic font-serif text-white leading-tight mb-8">Reach the <br /> Studio.</h3>
                        <div class="w-12 h-px bg-[#D97706] mb-12"></div>
                    </div>

                    <div class="space-y-12">
                        <div class="flex items-center space-x-6">
                            <a href="#" class="social-btn"><i data-lucide="facebook" class="w-4 h-4"></i></a>
                            <a href="#" class="social-btn"><i data-lucide="instagram" class="w-4 h-4"></i></a>
                            <a href="#" class="social-btn"><i data-lucide="twitter" class="w-4 h-4"></i></a>
                            <a href="#" class="social-btn"><i data-lucide="music-2" class="w-4 h-4"></i></a>
                        </div>
                        <p class="text-[9px] font-bold uppercase tracking-[0.6em] text-white/30">From Baguio With Love</p>
                    </div>
                </div>

                <div class="lg:w-3/5 p-16 lg:p-24 bg-white">
                    <form class="space-y-12">
                        <div class="space-y-2 border-b border-slate-100 pb-4 focus-within:border-[#D97706] transition-colors">
                            <label class="text-[9px] font-bold uppercase tracking-[0.4em] text-slate-400">Identity</label>
                            <input type="text" placeholder="FULL NAME" class="w-full bg-transparent outline-none text-sm font-bold placeholder:text-slate-200">
                        </div>
                        <div class="space-y-2 border-b border-slate-100 pb-4 focus-within:border-[#D97706] transition-colors">
                            <label class="text-[9px] font-bold uppercase tracking-[0.4em] text-slate-400">Electronic Mail</label>
                            <input type="email" placeholder="EMAIL ADDRESS" class="w-full bg-transparent outline-none text-sm font-bold placeholder:text-slate-200">
                        </div>
                        <button class="w-full py-6 bg-[#0A1128] text-white text-[10px] font-bold uppercase tracking-[0.6em] hover:bg-[#D97706] transition-all duration-700">
                            Send Inquiry
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <style>
        /* Premium Orange Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #0A1128;
        }

        ::-webkit-scrollbar-thumb {
            background: #D97706;
            border-radius: 20px;
            border: 2px solid #0A1128;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #f59e0b;
            }

        /* Navigation Links */
        .nav-link {
            font-size: 10px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5em;
            color: rgba(255, 255, 255, 0.5);
            transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
            position: relative;
        }

            .nav-link:hover {
                color: white;
            }

            .nav-link::after {
                content: "";
                position: absolute;
                left: 0;
                bottom: -8px;
                width: 0;
                height: 1px;
                background: #D97706;
                transition: width 0.6s cubic-bezier(0.16, 1, 0.3, 1);
            }

            .nav-link:hover::after {
                width: 100%;
            }

        /* Social Media Buttons */
        .social-btn {
            width: 44px;
            height: 44px;
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 50%;
            display: flex;
            items-center;
            justify-content: center;
            color: rgba(255,255,255,0.4);
            transition: all 0.5s ease;
        }

            .social-btn:hover {
                border-color: #D97706;
                color: #D97706;
                transform: translateY(-3px);
            }

        /* Ken Burns Zoom Effect */
        .slow-zoom {
            animation: slowZoom 40s infinite alternate ease-in-out;
        }

        @@keyframes slowZoom {
            from {
                transform: scale(1.0);
            }

            to {
                transform: scale(1.2);
            }
        }

        html {
            scroll-behavior: smooth;
        }
    </style>

</div>