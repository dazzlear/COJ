@model COJ.Models.HomeViewModel

<div x-data="{ scrolled: false, isMenuOpen: false }"
     @@scroll.window="scrolled = (window.pageYOffset > 50)"
     class="selection:bg-[#D97706] selection:text-white bg-[#FDF9F3] text-[#0A1128] overflow-x-hidden">

    <nav :class="scrolled ? 'bg-[#0A1128]/95 backdrop-blur-2xl py-4 shadow-2xl border-b border-white/5' : 'bg-transparent py-10'"
         class="fixed w-full z-50 transition-all duration-1000 ease-in-out">
        <div class="max-w-screen-2xl mx-auto px-10 md:px-16">

            <div class="hidden lg:grid grid-cols-3 items-center">
                <div class="flex items-center space-x-12">
                    <a href="#home" class="nav-link">Home</a>
                    <a href="#band" class="nav-link">The Band</a>
                    <a href="#music" class="nav-link">Music</a>
                </div>

                <div class="flex justify-center">
                    <a href="#home" class="flex flex-col items-center group">
                        <img src="~/img/logo.png" 
                             alt="COJ Logo" 
                             class="w-10 h-10 mb-4 transition-transform duration-700 group-hover:scale-110" />
                        <span class="text-2xl font-light tracking-[0.8em] uppercase text-white leading-none drop-shadow-2xl">
                            Cup of Joe
                        </span>
                    </a>
                </div>

                <div class="flex justify-end space-x-12 items-center">
                    <a href="#shows" class="nav-link">Shows</a>
                    <a href="#contact"
                       class="px-10 py-2 border border-[#D97706]/40 text-white text-[9px] font-bold uppercase tracking-[0.4em] rounded-full 
                              hover:bg-[#D97706] hover:border-[#D97706] transition-all duration-500 shadow-xl">
                        Connect
                    </a>
                </div>
            </div>

            <div class="flex lg:hidden justify-between items-center">
                <span class="text-lg font-light tracking-[0.4em] uppercase text-white">Cup of Joe</span>
                <button @@click="isMenuOpen = !isMenuOpen" class="text-white">
                    <i x-show="!isMenuOpen" data-lucide="align-right" class="w-8 h-8"></i>
                    <i x-show="isMenuOpen" data-lucide="x" class="w-8 h-8"></i>
                </button>
            </div>
        </div>

        <div x-show="isMenuOpen" x-cloak 
             x-transition:enter="transition ease-out duration-500"
             x-transition:enter-start="opacity-0 translate-x-full"
             x-transition:enter-end="opacity-100 translate-x-0"
             class="fixed inset-0 bg-[#0A1128] z-40 lg:hidden flex flex-col items-center justify-center space-y-12">
            <a href="#home" @@click="isMenuOpen=false" class="mobile-nav-link">Home</a>
            <a href="#band" @@click="isMenuOpen=false" class="mobile-nav-link">The Band</a>
            <a href="#music" @@click="isMenuOpen=false" class="mobile-nav-link">Music</a>
            <a href="#contact" @@click="isMenuOpen=false" class="mt-8 px-12 py-4 bg-[#D97706] text-white rounded-full text-xs font-bold uppercase tracking-widest">Connect</a>
        </div>
    </nav>

    <section id="home" class="relative h-screen flex flex-col items-center justify-center overflow-hidden bg-[#0A1128]">
        <div class="absolute inset-0 z-0">
            <img src="~/img/cover.png" asp-append-version="true"
                 class="w-full h-full object-cover scale-110 slow-zoom opacity-30 grayscale-[30%]" />
            
            <div class="absolute inset-0 bg-gradient-to-b from-[#0A1128] via-transparent to-[#0A1128]"></div>
            <div class="film-grain"></div>
        </div>

        <div class="relative z-10">
            <div class="w-px h-32 bg-gradient-to-b from-transparent via-[#D97706]/40 to-transparent mx-auto"></div>
        </div>

        <div class="absolute bottom-20 z-10 text-center">
            <p class="text-white/20 text-[10px] uppercase tracking-[1.2em] font-medium animate-pulse">
                Unofficial Artist Page
            </p>
        </div>
    </section>

    <section id="band" class="py-52 bg-[#FDF9F3]">
        <div class="max-w-screen-2xl mx-auto px-10">
            <div class="flex flex-col lg:flex-row justify-between items-end mb-32 space-y-8">
                <div class="reveal-on-scroll">
                    <h2 class="text-[10px] font-bold tracking-[1em] uppercase text-[#D97706] mb-6">Collective</h2>
                    <h3 class="text-7xl font-light tracking-tighter text-[#0A1128] italic font-serif">The Gentlemen.</h3>
                </div>
                <div class="w-px h-24 bg-black/10 hidden lg:block mx-12"></div>
                <p class="text-slate-400 text-xs max-w-xs leading-loose font-light italic">
                    Baguio-born storytellers redefining the sound of modern nostalgia through five distinct perspectives.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-12">
                @foreach (var member in Model.Members)
                {
                    string imgPath = $"/img/{member.Name.Split(' ')[0].ToLower()}.jpg";
                    <div class="group reveal-on-scroll" style="transition-delay: 100ms;">
                        <div class="relative w-full aspect-[3/4] overflow-hidden bg-[#0A1128] mb-8 grayscale group-hover:grayscale-0 transition-all duration-1000">
                            <img src="@imgPath" 
                                 onerror="this.src='https://images.unsplash.com/photo-1516280440614-37939bbacd81?q=80&w=400'"
                                 class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110 opacity-80 group-hover:opacity-100" />
                            <div class="absolute inset-0 border-[1px] border-white/10 group-hover:border-white/0 transition-all duration-700"></div>
                        </div>
                        <h4 class="text-base font-bold uppercase tracking-[0.2em] text-[#0A1128]">@member.Name</h4>
                        <p class="text-[8px] font-bold text-[#D97706] uppercase tracking-[0.5em] mt-3 opacity-0 group-hover:opacity-100 transition-all -translate-y-2 group-hover:translate-y-0">@member.Role</p>
                    </div>
                }
            </div>
        </div>
    </section>

    <section id="music" class="py-52 bg-[#0A1128] text-white relative">
        <div class="max-w-screen-2xl mx-auto px-10">
            <div class="flex justify-between items-end mb-32">
                <h3 class="text-6xl font-light tracking-tighter uppercase italic font-serif">Sonic Works.</h3>
                <div class="w-24 h-px bg-[#D97706]"></div>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-16">
                @foreach (var album in Model.Discography)
                {
                    <div class="group cursor-pointer reveal-on-scroll">
                        <div class="relative aspect-square mb-10 overflow-hidden shadow-2xl transition-all duration-700 group-hover:shadow-[0_40px_100px_-20px_rgba(217,119,6,0.2)]">
                            <img src="@Url.Content(album.Cover)" class="w-full h-full object-cover opacity-50 group-hover:opacity-100 transition-all duration-1000 group-hover:scale-105" />
                            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-500">
                                <div class="w-14 h-14 bg-white/10 backdrop-blur-md rounded-full border border-white/20 flex items-center justify-center">
                                    <i data-lucide="play" class="fill-white w-5 h-5 ml-1"></i>
                                </div>
                            </div>
                        </div>
                        <h3 class="text-xl font-bold uppercase tracking-widest mb-2">@album.Title</h3>
                        <p class="text-[9px] font-bold text-[#D97706] uppercase tracking-[0.4em]">@album.Type • @album.Year</p>
                    </div>
                }
            </div>
        </div>
    </section>

    <section id="contact" class="py-52 bg-[#FDF9F3]">
        <div class="max-w-6xl mx-auto px-10">
            <div class="bg-[#0A1128] rounded-sm shadow-[0_60px_120px_-40px_rgba(0,0,0,0.6)] flex flex-col lg:flex-row overflow-hidden border border-white/5">
                
                <div class="lg:w-2/5 p-16 lg:p-24 bg-[#0d1633] border-r border-white/5 flex flex-col justify-between">
                    <div>
                        <h3 class="text-[10px] font-bold tracking-[0.8em] uppercase text-[#D97706] mb-8">Reach Out</h3>
                        <h4 class="text-4xl font-light italic font-serif text-white mb-12">Let's craft <br/> the story.</h4>
                    </div>

                    <div class="space-y-12">
                        <div class="flex space-x-6">
                            <a href="#" class="social-btn"><i data-lucide="facebook" class="w-4 h-4"></i></a>
                            <a href="#" class="social-btn"><i data-lucide="instagram" class="w-4 h-4"></i></a>
                            <a href="#" class="social-btn"><i data-lucide="twitter" class="w-4 h-4"></i></a>
                            <a href="#" class="social-btn"><i data-lucide="music-2" class="w-4 h-4"></i></a>
                        </div>
                        <p class="text-[9px] font-bold uppercase tracking-[0.6em] text-white/20 uppercase">Baguio City, PH</p>
                    </div>
                </div>

                <div class="lg:w-3/5 p-16 lg:p-24 bg-white">
                    <form class="space-y-12">
                        <div class="border-b border-slate-100 pb-4 focus-within:border-[#D97706] transition-all">
                            <label class="text-[9px] font-bold uppercase tracking-[0.5em] text-slate-400">Identity</label>
                            <input type="text" placeholder="NAME" class="w-full bg-transparent outline-none text-sm font-bold placeholder:text-slate-200 mt-4">
                        </div>
                        <div class="border-b border-slate-100 pb-4 focus-within:border-[#D97706] transition-all">
                            <label class="text-[9px] font-bold uppercase tracking-[0.5em] text-slate-400">Contact</label>
                            <input type="email" placeholder="EMAIL" class="w-full bg-transparent outline-none text-sm font-bold placeholder:text-slate-200 mt-4">
                        </div>
                        <button class="w-full py-6 bg-[#0A1128] text-white text-[10px] font-bold uppercase tracking-[0.5em] hover:bg-[#D97706] transition-all duration-700">
                            Send Inquiry
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <footer class="py-20 bg-[#FDF9F3] text-center border-t border-black/5">
        <p class="text-[9px] font-bold uppercase tracking-[0.8em] text-black/20">© 2026 Cup of Joe Official</p>
    </footer>

    <style>
        /* Orange Scrollbar Layout */
        ::-webkit-scrollbar { width: 10px; }
        ::-webkit-scrollbar-track { background: #0A1128; }
        ::-webkit-scrollbar-thumb { 
            background: #D97706; 
            border-radius: 20px; 
            border: 3px solid #0A1128; 
        }
        ::-webkit-scrollbar-thumb:hover { background: #f59e0b; }

        /* Typography & Navigation */
        .nav-link {
            font-size: 10px; font-weight: 700; text-transform: uppercase;
            letter-spacing: 0.5em; color: rgba(255, 255, 255, 0.5);
            transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
            position: relative;
        }
        .nav-link:hover { color: white; }
        .nav-link::after {
            content: ""; position: absolute; left: 0; bottom: -8px; width: 0; height: 1px;
            background: #D97706; transition: width 0.6s cubic-bezier(0.16, 1, 0.3, 1);
        }
        .nav-link:hover::after { width: 100%; }

        .mobile-nav-link { font-size: 1.5rem; font-weight: 200; text-transform: uppercase; letter-spacing: 0.4em; color: white; }

        /* Social Buttons */
        .social-btn {
            width: 44px; height: 44px; border: 1px solid rgba(255,255,255,0.05);
            border-radius: 50%; display: flex; items-center; justify-content: center;
            color: rgba(255,255,255,0.3); transition: all 0.5s ease;
        }
        .social-btn:hover { border-color: #D97706; color: #D97706; transform: translateY(-4px); }

        /* Film Grain Effect */
        .film-grain {
            position: absolute; inset: 0; opacity: 0.05; pointer-events: none;
            background-image: url("https://grainy-gradients.vercel.app/noise.svg");
        }

        /* Ken Burns Effect */
        .slow-zoom { animation: slowZoom 45s infinite alternate ease-in-out; }
        @@keyframes slowZoom { from { transform: scale(1.0); } to { transform: scale(1.2); } }

        /* Alpine View Cloak */
        [x-cloak] { display: none !important; }

        html { scroll-behavior: smooth; }
    </style>

</div>