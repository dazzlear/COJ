@model COJ.Models.HomeViewModel

<div x-data="{ scrolled: false, isMenuOpen: false }"
     @@scroll.window="scrolled = (window.pageYOffset > 50)">

    <nav :class="scrolled ? 'bg-[#1A2B4B]/95 backdrop-blur-md py-3 shadow-2xl' : 'bg-transparent py-6'"
         class="fixed w-full z-50 transition-all duration-500">
        <div class="max-w-7xl mx-auto px-6">
            <div class="hidden md:flex items-center justify-between">
                <div class="flex-1 flex justify-end space-x-10 pr-12">
                    <a href="#home" :class="scrolled ? 'text-[#FDF9F3]' : 'text-white'" class="text-[10px] font-black uppercase tracking-[0.25em] hover:text-[#FF8C42]">Home</a>
                    <a href="#band" :class="scrolled ? 'text-[#FDF9F3]' : 'text-white'" class="text-[10px] font-black uppercase tracking-[0.25em] hover:text-[#FF8C42]">The Band</a>
                    <a href="#music" :class="scrolled ? 'text-[#FDF9F3]' : 'text-white'" class="text-[10px] font-black uppercase tracking-[0.25em] hover:text-[#FF8C42]">Music</a>
                </div>

                <div class="flex items-center space-x-3 group cursor-pointer shrink-0">
                    <div class="p-2 bg-[#FF8C42] rounded-lg rotate-3 group-hover:rotate-0 transition-transform">
                        <i data-lucide="sparkles" class="w-5 h-5 text-white"></i>
                    </div>
                    <span class="text-2xl font-black tracking-tighter uppercase text-white">Cup of Joe</span>
                </div>

                <div class="flex-1 flex justify-start space-x-10 pl-12">
                    <a href="#gallery" :class="scrolled ? 'text-[#FDF9F3]' : 'text-white'" class="text-[10px] font-black uppercase tracking-[0.25em] hover:text-[#FF8C42]">Gallery</a>
                    <a href="#shows" :class="scrolled ? 'text-[#FDF9F3]' : 'text-white'" class="text-[10px] font-black uppercase tracking-[0.25em] hover:text-[#FF8C42]">Shows</a>
                    <a href="#contact" :class="scrolled ? 'text-[#FDF9F3]' : 'text-white'" class="text-[10px] font-black uppercase tracking-[0.25em] hover:text-[#FF8C42]">Contact</a>
                </div>
            </div>

            <div class="flex md:hidden justify-between items-center">
                <span class="text-2xl font-black tracking-tighter uppercase text-white">Cup of Joe</span>
                <button @@click="isMenuOpen = !isMenuOpen" class="text-white">
                    <i x-show="!isMenuOpen" data-lucide="menu"></i>
                    <i x-show="isMenuOpen" data-lucide="x"></i>
                </button>
            </div>
        </div>

        <div x-show="isMenuOpen" x-cloak
             class="fixed inset-0 bg-[#1A2B4B] z-40 flex flex-col items-center justify-center space-y-8 md:hidden">
            <a href="#home" @@click="isMenuOpen = false" class="text-4xl font-black uppercase text-[#FDF9F3]">Home</a>
            <a href="#band" @@click="isMenuOpen = false" class="text-4xl font-black uppercase text-[#FDF9F3]">The Band</a>
            <a href="#music" @@click="isMenuOpen = false" class="text-4xl font-black uppercase text-[#FDF9F3]">Music</a>
        </div>
    </nav>

    <section id="home" class="relative h-screen flex items-center justify-center bg-[#1A2B4B] overflow-hidden">
        <div class="absolute inset-0 z-0">
            <img src="~/img/cover.jpg" class="w-full h-full object-cover grayscale-[30%] opacity-60" />
            <div class="absolute inset-0 bg-gradient-to-t from-[#1A2B4B] via-transparent to-[#1A2B4B]/40"></div>
        </div>

        <div class="relative z-10 text-center px-6">
            <div class="inline-flex items-center gap-2 px-6 py-2 bg-[#FF8C42] text-white rounded-full mb-8 transform hover:-rotate-2 transition-transform">
                <i data-lucide="sparkles" class="w-4 h-4"></i>
                <span class="text-[10px] font-black uppercase tracking-[0.3em]">Patutunguhan Era</span>
            </div>
            <p class="text-3xl md:text-6xl font-serif italic text-[#FDF9F3] leading-tight mb-12">
                "Saan nga ba ang <br />
                <span class="text-[#FF8C42] not-italic font-black border-b-4 border-[#FF8C42]">patutunguhan</span> <br />
                nating dalawa?"
            </p>
            <div class="flex flex-col sm:flex-row items-center justify-center gap-6">
                <a href="#music" class="px-14 py-5 bg-white text-[#1A2B4B] font-black uppercase tracking-widest rounded-2xl hover:bg-[#FF8C42] hover:text-white transition-all">
                    Listen Now
                </a>
            </div>
        </div>
    </section>

    <section id="band" class="py-32 px-6 max-w-7xl mx-auto">
        <div class="grid lg:grid-cols-12 gap-16 items-center">
            <div class="lg:col-span-5 space-y-8">
                <h2 class="text-6xl font-black tracking-tighter">THE LINEUP.</h2>
                <div class="grid gap-4">
                    @foreach (var member in Model.Members)
                    {
                        <div class="flex items-center gap-6 p-5 bg-white rounded-3xl border border-transparent hover:border-[#FF8C42]/20 shadow-sm transition-all group">
                            <div class="w-14 h-14 bg-[#1A2B4B] text-white rounded-2xl flex items-center justify-center font-black group-hover:bg-[#FF8C42]">
                                @member.Name[0]
                            </div>
                            <div>
                                <h4 class="text-lg font-black uppercase text-[#1A2B4B]">@member.Name</h4>
                                <p class="text-xs font-bold text-[#FF8C42] uppercase tracking-widest">@member.Role</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="lg:col-span-7">
                <div class="rounded-[4rem] overflow-hidden border-[12px] border-white shadow-2xl">
                    <img src="https://images.unsplash.com/photo-1516280440614-37939bbacd81?q=80&w=1200" class="w-full aspect-[4/5] object-cover" />
                </div>
            </div>
        </div>
    </section>

    <section id="music" class="py-32 bg-[#1A2B4B] text-white">
        <div class="max-w-7xl mx-auto px-6">
            <h2 class="text-7xl font-black mb-20 uppercase">Our Sounds.</h2>
            <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-12">
                @foreach (var album in Model.Discography)
                {
                    <div class="group cursor-pointer">
                        <div class="aspect-square bg-white/5 rounded-[3rem] overflow-hidden mb-8 relative border border-white/10 group-hover:border-[#FF8C42] transition-all">
                            <img src="@album.Cover" class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-opacity" />
                            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                                <div class="w-16 h-16 bg-[#FF8C42] rounded-full flex items-center justify-center shadow-xl">
                                    <i data-lucide="play" fill="currentColor"></i>
                                </div>
                            </div>
                        </div>
                        <h3 class="text-2xl font-black uppercase">@album.Title</h3>
                        <p class="text-xs font-bold text-[#FF8C42] uppercase mt-2">@album.Type • @album.Year</p>
                    </div>
                }
            </div>
        </div>
    </section>

    <section id="contact" class="py-32 px-6">
        <div class="max-w-6xl mx-auto">
            <div class="bg-white rounded-[4rem] p-12 lg:p-24 flex flex-col lg:flex-row items-center gap-20 shadow-xl border border-gray-100">
                <div class="lg:w-1/2 space-y-10">
                    <h2 class="text-7xl font-black tracking-tighter leading-[0.9] text-[#1A2B4B]">LET'S <br /> CONNECT.</h2>
                    <p class="text-2xl font-serif italic text-[#4B6584]">For bookings or a warm cup of coffee.</p>
                </div>
                <div class="lg:w-1/2 w-full bg-[#1A2B4B] rounded-[3.5rem] p-12 space-y-6">
                    <input type="text" placeholder="Full Name" class="w-full bg-white/5 border-2 border-white/5 p-5 focus:border-[#FF8C42] text-white rounded-2xl outline-none" />
                    <input type="email" placeholder="Email" class="w-full bg-white/5 border-2 border-white/5 p-5 focus:border-[#FF8C42] text-white rounded-2xl outline-none" />
                    <button class="w-full py-6 bg-[#FF8C42] text-white font-black uppercase rounded-2xl hover:bg-white hover:text-[#1A2B4B] transition-all">
                        Send Message
                    </button>
                </div>
            </div>
        </div>
    </section>

</div>