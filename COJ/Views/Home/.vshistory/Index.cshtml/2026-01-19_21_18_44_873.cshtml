@model COJ.Models.HomeViewModel

<div x-data="{ scrolled: false, isMenuOpen: false }"
     @@scroll.window="scrolled = (window.pageYOffset > 50)"
     class="selection:bg-[#D97706] selection:text-white bg-[#FDF9F3]">

    <nav :class="scrolled ? 'bg-[#0A1128]/95 backdrop-blur-xl py-4 shadow-2xl border-b border-white/5' : 'bg-transparent py-10'"
         class="fixed w-full z-50 transition-all duration-700 ease-in-out">
        <div class="max-w-screen-2xl mx-auto px-8 md:px-12">

            <div class="hidden lg:grid grid-cols-3 items-center">
                <div class="flex space-x-12">
                    <a href="#home" class="nav-link">Home</a>
                    <a href="#band" class="nav-link">Band</a>
                    <a href="#music" class="nav-link">Music</a>
                </div>

                <div class="flex justify-center">
                    <a href="#home" class="flex flex-col items-center group">
                        <div class="relative mb-1">
                            <div class="absolute -inset-2 bg-[#D97706] rounded-full blur-xl opacity-0 group-hover:opacity-30 transition-opacity"></div>
                            <i data-lucide="sparkles" class="relative w-5 h-5 text-[#D97706] mb-1"></i>
                        </div>
                        <span class="text-2xl font-black tracking-[0.6em] uppercase text-white leading-none">Cup of Joe</span>
                    </a>
                </div>

                <div class="flex justify-end space-x-12 items-center">
                    <a href="#shows" class="nav-link">Shows</a>
                    <a href="#contact" class="px-8 py-2 border border-[#D97706] text-[#D97706] text-[10px] font-bold uppercase tracking-[0.3em] rounded-full hover:bg-[#D97706] hover:text-white transition-all">
                        Connect
                    </a>
                </div>
            </div>

            <div class="flex lg:hidden justify-between items-center">
                <span class="text-xl font-black tracking-[0.3em] uppercase text-white">Cup of Joe</span>
                <button @@click="isMenuOpen = !isMenuOpen" class="text-white">
                    <i x-show="!isMenuOpen" data-lucide="menu" class="w-8 h-8"></i>
                    <i x-show="isMenuOpen" data-lucide="x" class="w-8 h-8"></i>
                </button>
            </div>
        </div>
    </nav>

    <section id="home" class="relative h-screen flex items-center justify-center overflow-hidden bg-[#0A1128]">
        <div class="absolute inset-0 z-0">
            <img src="~/img/cover.jpg" asp-append-version="true" class="w-full h-full object-cover scale-105 animate-slow-zoom opacity-40" />
            <div class="absolute inset-0 bg-gradient-to-b from-[#0A1128] via-transparent to-[#0A1128]"></div>
        </div>

        <div class="relative z-10 text-center max-w-5xl px-6">
            <div class="w-px h-20 bg-gradient-to-b from-transparent via-[#D97706] to-transparent mx-auto mb-10 opacity-60"></div>
            <h1 class="text-5xl md:text-8xl font-serif italic text-white leading-tight mb-8 tracking-tighter">
                Saan nga ba ang <br />
                <span class="not-italic font-black uppercase text-[0.8em] tracking-[0.2em] text-[#D97706]">Patutunguhan</span>
            </h1>
            <p class="text-white/40 text-[10px] uppercase tracking-[0.6em] font-bold mt-12">Official Artist Page</p>
        </div>
    </section>

    <section id="band" class="py-40 bg-[#FDF9F3]">
        <div class="max-w-screen-2xl mx-auto px-8">
            <div class="text-center mb-24">
                <h2 class="text-[10px] font-black tracking-[0.8em] uppercase text-[#D97706] mb-4">The Collective</h2>
                <h3 class="text-6xl font-black tracking-tighter text-[#0A1128]">MEET THE LINEUP.</h3>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-8">
                @foreach (var member in Model.Members)
                {
                    string imgPath = $"/img/{member.Name.Split(' ')[0].ToLower()}.jpg";

                    <div class="group relative flex flex-col items-center">
                        <div class="relative w-full aspect-[3/4] overflow-hidden rounded-sm mb-6 grayscale group-hover:grayscale-0 transition-all duration-700 shadow-2xl">
                            <img src="@imgPath"
                                 onerror="this.src='https://images.unsplash.com/photo-1501386761578-eac5c94b800a?q=80&w=400'"
                                 class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110" />
                            <div class="absolute inset-0 border-[15px] border-white/0 group-hover:border-white/10 transition-all duration-500"></div>
                        </div>
                        <h4 class="text-lg font-bold uppercase tracking-tighter text-[#0A1128]">@member.Name</h4>
                        <p class="text-[9px] font-bold text-[#D97706] uppercase tracking-[0.3em] mt-2 opacity-70 group-hover:opacity-100 transition-opacity">@member.Role</p>
                    </div>
                }
            </div>
        </div>
    </section>

    <section id="music" class="py-40 bg-[#0A1128] text-white overflow-hidden">
        <div class="max-w-screen-2xl mx-auto px-8">
            <div class="flex justify-between items-end mb-24">
                <h3 class="text-6xl font-black tracking-tighter uppercase">Our Sounds.</h3>
                <div class="hidden md:block w-32 h-px bg-[#D97706]"></div>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-12">
                @foreach (var album in Model.Discography)
                {
                    <div class="group cursor-pointer">
                        <div class="aspect-square bg-white/5 overflow-hidden mb-8 relative group-hover:translate-y-[-10px] transition-transform duration-500 shadow-2xl">
                            <img src="@Url.Content(album.Cover)" class="w-full h-full object-cover opacity-60 group-hover:opacity-100 transition-all duration-700" />
                            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                                <div class="w-16 h-16 bg-[#D97706] rounded-full flex items-center justify-center">
                                    <i data-lucide="play" class="fill-white w-6 h-6"></i>
                                </div>
                            </div>
                        </div>
                        <h3 class="text-xl font-bold uppercase tracking-tight">@album.Title</h3>
                        <p class="text-[10px] font-bold text-[#D97706] uppercase tracking-widest mt-2">@album.Type • @album.Year</p>
                    </div>
                }
            </div>
        </div>
    </section>

    <section id="contact" class="py-40 bg-[#FDF9F3]">
        <div class="max-w-5xl mx-auto px-8">
            <div class="bg-[#0A1128] rounded-sm shadow-[0_50px_100px_-20px_rgba(0,0,0,0.4)] overflow-hidden">
                <div class="flex flex-col md:flex-row">
                    <div class="md:w-1/2 p-12 md:p-20 bg-gradient-to-br from-[#0A1128] to-[#121b33] border-r border-white/5">
                        <div class="w-10 h-1 bg-[#D97706] mb-8"></div>
                        <h2 class="text-5xl font-black text-white mb-6 tracking-tighter uppercase">Let's <br /> Connect.</h2>
                        <p class="text-white/40 font-serif italic mb-12 leading-relaxed">For bookings, stories, or just a coffee chat, our doors are always open.</p>

                        <div class="space-y-8">
                            <h4 class="text-[10px] font-bold text-[#D97706] uppercase tracking-[0.4em]">Follow the Journey</h4>
                            <div class="flex flex-wrap gap-4">
                                <a href="#" class="social-icon-btn group" title="Facebook">
                                    <i data-lucide="facebook" class="w-5 h-5"></i>
                                </a>
                                <a href="#" class="social-icon-btn group" title="Instagram">
                                    <i data-lucide="instagram" class="w-5 h-5"></i>
                                </a>
                                <a href="#" class="social-icon-btn group" title="X (Twitter)">
                                    <i data-lucide="twitter" class="w-5 h-5"></i>
                                </a>
                                <a href="#" class="social-icon-btn group" title="TikTok">
                                    <i data-lucide="music-2" class="w-5 h-5"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="md:w-1/2 p-12 md:p-20 bg-white/5 backdrop-blur-sm">
                        <form class="space-y-8">
                            <div class="space-y-2">
                                <label class="text-[9px] font-black uppercase tracking-[0.3em] text-[#D97706]">Your Identity</label>
                                <input type="text" placeholder="Full Name" class="form-input" />
                            </div>
                            <div class="space-y-2">
                                <label class="text-[9px] font-black uppercase tracking-[0.3em] text-[#D97706]">Email Reach</label>
                                <input type="email" placeholder="email@@example.com" class="form-input" />
                            </div>
                            <div class="space-y-2">
                                <label class="text-[9px] font-black uppercase tracking-[0.3em] text-[#D97706]">Message</label>
                                <textarea rows="3" placeholder="Tell us your story..." class="form-input resize-none"></textarea>
                            </div>
                            <button class="w-full py-5 bg-[#D97706] text-white text-[11px] font-bold uppercase tracking-[0.4em] hover:bg-white hover:text-[#0A1128] transition-all transform active:scale-95">
                                Send Message
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="py-20 bg-[#FDF9F3] text-center">
        <div class="w-12 h-px bg-[#0A1128]/10 mx-auto mb-8"></div>
        <p class="text-[9px] font-bold uppercase tracking-[0.6em] text-[#0A1128]/30">© @DateTime.Now.Year Cup of Joe • Baguio City</p>
    </footer>

</div>

<style>
    /* 1. Orange Scrollbar Design */
    ::-webkit-scrollbar {
        width: 8px;
    }

    ::-webkit-scrollbar-track {
        background: #0A1128;
    }

    ::-webkit-scrollbar-thumb {
        background: #D97706; /* Your Burnt Orange */
        border-radius: 10px;
        border: 2px solid #0A1128; /* Creates a padding effect */
    }

        ::-webkit-scrollbar-thumb:hover {
            background: #f59e0b;
        }

    /* 2. Navigation Styling */
    .nav-link {
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.4em;
        color: rgba(255, 255, 255, 0.6);
        transition: all 0.4s ease;
        position: relative;
    }

        .nav-link:hover {
            color: white;
        }

        .nav-link::after {
            content: '';
            position: absolute;
            bottom: -6px;
            left: 0;
            width: 0;
            height: 1px;
            background: #D97706;
            transition: width 0.4s ease;
        }

        .nav-link:hover::after {
            width: 100%;
        }

    /* 3. Form Inputs */
    .form-input {
        width: 100%;
        background: transparent;
        border-bottom: 1px solid rgba(255,255,255,0.1);
        padding: 1rem 0;
        color: white;
        font-size: 12px;
        outline: none;
        transition: border-color 0.4s;
    }

        .form-input:focus {
            border-color: #D97706;
        }

    /* 4. Social Media Icon Buttons */
    .social-icon-btn {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid rgba(255,255,255,0.1);
        border-radius: 50%;
        color: white;
        transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        background: rgba(255,255,255,0.02);
    }

        .social-icon-btn:hover {
            background: #D97706;
            border-color: #D97706;
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(217, 119, 6, 0.3);
        }

    /* 5. Animations */
    @@keyframes slow-zoom {
        0% {
            transform: scale(1);
        }

        100% {
            transform: scale(1.15);
        }
    }

    .animate-slow-zoom {
        animation: slow-zoom 30s infinite alternate ease-in-out;
    }

    html {
        scroll-behavior: smooth;
    }
</style>