@model COJ.Models.HomeViewModel

<div x-data="{ scrolled: false, isMenuOpen: false }"
     @@scroll.window="scrolled = (window.pageYOffset > 50)"
     class="selection:bg-[#D97706] selection:text-white bg-[#FDF9F3] text-[#0A1128]">

    <nav :class="scrolled ? 'bg-[#0A1128]/95 backdrop-blur-xl py-4 shadow-2xl border-b border-white/5' : 'bg-transparent py-10'"
         class="fixed w-full z-50 transition-all duration-1000 ease-in-out">
        <div class="max-w-screen-2xl mx-auto px-8 md:px-12">

            <div class="hidden lg:grid grid-cols-3 items-center">
                <div class="flex items-center space-x-12">
                    <a href="#home" class="nav-link">Home</a>
                    <a href="#band" class="nav-link">Band</a>
                    <a href="#music" class="nav-link">Music</a>
                </div>

                <div class="flex justify-center">
                    <a href="#home" class="flex flex-col items-center group">
                        <img src="~/img/logo.png"
                             alt="Cup of Joe Logo"
                             class="w-12 h-12 mb-4 transition-transform duration-700 group-hover:scale-110" />
                        <span class="text-2xl font-black tracking-[0.6em] uppercase text-white leading-none drop-shadow-[0_20px_40px_rgba(0,0,0,0.35)]">
                            Cup of Joe
                        </span>
                    </a>
                </div>  

                <div class="flex justify-end space-x-12 items-center">
                    <a href="#shows" class="nav-link">Shows</a>
                    <a href="#contact"
                       class="px-8 py-2 border border-[#D97706] text-[#D97706] text-[10px] font-bold uppercase tracking-[0.3em] rounded-full
                              hover:bg-[#D97706] hover:text-white transition-all duration-500 shadow-[0_20px_60px_-25px_rgba(217,119,6,0.6)]">
                        Connect
                    </a>
                </div>
            </div>

            <div class="flex lg:hidden justify-between items-center">
                <span class="text-xl font-black tracking-[0.3em] uppercase text-white drop-shadow-[0_20px_40px_rgba(0,0,0,0.35)]">
                    Cup of Joe
                </span>
                <button @@click="isMenuOpen = !isMenuOpen"
                        class="text-white rounded-full w-11 h-11 grid place-items-center bg-white/5 border border-white/10 backdrop-blur-md">
                    <i x-show="!isMenuOpen" data-lucide="menu" class="w-6 h-6"></i>
                    <i x-show="isMenuOpen" data-lucide="x" class="w-6 h-6"></i>
                </button>
            </div>
        </div>

        <div x-show="isMenuOpen" x-cloak
             x-transition.opacity.duration.300ms
             class="fixed inset-0 bg-[#0A1128] z-40 lg:hidden">
            <div class="h-full flex flex-col items-center justify-center space-y-10 text-center px-10">
                <a href="#home" @@click="isMenuOpen=false" class="text-4xl font-black uppercase text-white hover:text-[#D97706]">Home</a>
                <a href="#band" @@click="isMenuOpen=false" class="text-4xl font-black uppercase text-white hover:text-[#D97706]">Band</a>
                <a href="#music" @@click="isMenuOpen=false" class="text-4xl font-black uppercase text-white hover:text-[#D97706]">Music</a>
                <a href="#contact" @@click="isMenuOpen=false" class="mt-6 px-10 py-4 rounded-full bg-[#D97706] text-white font-bold uppercase tracking-widest">Connect</a>
            </div>
        </div>
    </nav>

    <section id="home" class="relative h-screen flex flex-col items-center justify-center overflow-hidden bg-[#0A1128]">
        <div class="absolute inset-0 z-0">
            <img src="~/img/cover.png" asp-append-version="true"
                 class="w-full h-full object-cover scale-105 slow-zoom opacity-40" />
            <div class="absolute inset-0 bg-gradient-to-b from-[#0A1128] via-black/10 to-[#0A1128]"></div>
        </div>

        <div class="absolute bottom-16 z-10 text-center">
            <p class="text-white/30 text-[10px] uppercase tracking-[1em] font-bold animate-pulse">
                Unofficial Artist Page
            </p>
        </div>
    </section>

    @*BAND*@
    <section id="band" class="py-40 bg-[#FDF9F3]">
        <div class="max-w-screen-2xl mx-auto px-8">
            <div class="text-center mb-24">
                <h2 class="text-[10px] font-black tracking-[0.8em] uppercase text-[#D97706] mb-4">The Collective</h2>
                <h3 class="text-6xl font-black tracking-tighter text-[#0A1128]">MEET THE BAND.</h3>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-10">
                @foreach (var member in Model.Members)
                {
                    string imgPath = $"/img/{member.Name.Split(' ')[0].ToLower()}.jpg";

                    <div class="group relative flex flex-col items-center">
                        <div class="relative w-full aspect-[3/4] overflow-hidden rounded-sm mb-6 grayscale group-hover:grayscale-0 transition-all duration-1000 shadow-2xl">
                            <img src="@imgPath"
                                 onerror="this.src='https://images.unsplash.com/photo-1516280440614-37939bbacd81?q=80&w=400'"
                                 class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110" />
                            <div class="absolute inset-0 border-[14px] border-white/0 group-hover:border-white/12 transition-all duration-700"></div>
                        </div>
                        <h4 class="text-lg font-bold uppercase tracking-tight text-[#0A1128]">@member.Name</h4>
                        <p class="text-[9px] font-bold text-[#D97706] uppercase tracking-[0.3em] mt-2 opacity-70 group-hover:opacity-100 transition-opacity">@member.Role</p>
                    </div>
                }
            </div>
        </div>
    </section>

    <section id="music" class="py-40 bg-[#0A1128] text-white overflow-hidden">
        <div class="max-w-screen-2xl mx-auto px-8">
            <div class="flex justify-between items-end mb-24">
                <h3 class="text-6xl font-black tracking-tighter uppercase">Our Sounds.</h3>
                <div class="hidden md:block w-32 h-px bg-[#D97706] opacity-70"></div>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-12">
                @foreach (var album in Model.Discography)
                {
                    <div class="group cursor-pointer">
                        <div class="relative aspect-square bg-white/5 overflow-hidden mb-8 shadow-2xl transition-transform duration-500 group-hover:-translate-y-3 border border-white/10 group-hover:border-[#D97706]/50">
                            <img src="@Url.Content(album.Cover)" class="w-full h-full object-cover opacity-60 group-hover:opacity-100 transition-all duration-700" />
                            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                                <div class="w-16 h-16 bg-[#D97706] rounded-full flex items-center justify-center">
                                    <i data-lucide="play" class="fill-white w-6 h-6"></i>
                                </div>
                            </div>
                        </div>
                        <h3 class="text-xl font-bold uppercase tracking-tight">@album.Title</h3>
                        <p class="text-[10px] font-bold text-[#D97706] uppercase tracking-widest mt-2">@album.Type • @album.Year</p>
                    </div>
                }
            </div>
        </div>
    </section>

    <section id="contact" class="py-40 bg-[#FDF9F3]">
        <div class="max-w-6xl mx-auto px-8">
            <div class="relative bg-[#0A1128] rounded-sm shadow-2xl overflow-hidden border border-white/5">
                <div class="flex flex-col lg:flex-row">
                    <div class="lg:w-2/5 p-12 lg:p-20 bg-gradient-to-br from-[#0A1128] to-[#0d1a3d] text-white border-r border-white/5">
                        <h2 class="text-[10px] font-black tracking-[0.8em] uppercase text-[#D97706] mb-8">Get In Touch</h2>
                        <h3 class="text-5xl font-bold mb-10 tracking-tighter">LET'S <br /> CONNECT.</h3>
                        <div class="flex flex-wrap gap-4">
                            <a href="#" class="social-icon-btn"><i data-lucide="facebook" class="w-5 h-5"></i></a>
                            <a href="#" class="social-icon-btn"><i data-lucide="instagram" class="w-5 h-5"></i></a>
                            <a href="#" class="social-icon-btn"><i data-lucide="twitter" class="w-5 h-5"></i></a>
                            <a href="#" class="social-icon-btn"><i data-lucide="music-2" class="w-5 h-5"></i></a>
                        </div>
                    </div>
                    <div class="lg:w-3/5 p-12 lg:p-20 bg-white">
                        <form class="space-y-10">
                            <input type="text" placeholder="NAME" class="form-input" />
                            <input type="email" placeholder="EMAIL" class="form-input" />
                            <textarea rows="3" placeholder="YOUR MESSAGE" class="form-input resize-none"></textarea>
                            <button class="relative overflow-hidden group bg-[#0A1128] text-white px-12 py-5 text-[11px] font-bold uppercase tracking-[0.4em]">
                                <span class="relative z-10">Send Inquiry</span>
                                <div class="absolute inset-0 bg-[#D97706] translate-y-full group-hover:translate-y-0 transition-transform duration-500"></div>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="py-20 bg-[#FDF9F3] text-center">
        <div class="w-12 h-px bg-[#0A1128]/10 mx-auto mb-8"></div>
        <p class="text-[9px] font-bold uppercase tracking-[0.6em] text-[#0A1128]/30">© 2026 Cup of Joe • From Baguio With Love</p>
    </footer>

    <style>
        /* --- PREMIUM ORANGE SCROLLBAR --- */
        ::-webkit-scrollbar {
            width: 10px;
        }

        ::-webkit-scrollbar-track {
            background: #0A1128;
        }

        ::-webkit-scrollbar-thumb {
            background: #D97706;
            border-radius: 10px;
            border: 3px solid #0A1128;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #f59e0b;
            }

        /* --- NAVIGATION LINKS --- */
        .nav-link {
            font-size: 10px;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: .35em;
            color: rgba(255,255,255,.9);
            position: relative;
            transition: color .35s ease;
        }

            .nav-link:hover {
                color: #D97706;
            }

            .nav-link::after {
                content: "";
                position: absolute;
                left: 0;
                bottom: -10px;
                width: 100%;
                height: 2px;
                background: linear-gradient(90deg, rgba(217,119,6,0), rgba(217,119,6,1), rgba(217,119,6,0));
                transform: scaleX(0);
                transition: transform .45s ease;
            }

            .nav-link:hover::after {
                transform: scaleX(1);
            }

        /* --- FORM ELEMENTS --- */
        .form-input {
            width: 100%;
            padding: 1rem 0;
            background: transparent;
            border-bottom: 1px solid #e2e8f0;
            outline: none;
            font-weight: 700;
            font-size: 14px;
            transition: border-color 0.4s;
        }

            .form-input:focus {
                border-color: #D97706;
            }

        /* --- SOCIAL BUTTONS --- */
        .social-icon-btn {
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            color: white;
            transition: all 0.5s;
        }

            .social-icon-btn:hover {
                border-color: #D97706;
                color: #D97706;
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(217, 119, 6, 0.2);
            }

        /* --- ANIMATIONS --- */
        .slow-zoom {
            animation: slowZoom 20s infinite alternate ease-in-out;
        }

        @@keyframes slowZoom {
            from {
                transform: scale(1.05);
            }

            to {
                transform: scale(1.15);
            }
        }

        html {
            scroll-behavior: smooth;
        }

        [x-cloak] {
            display: none !important;
        }
    </style>

</div>