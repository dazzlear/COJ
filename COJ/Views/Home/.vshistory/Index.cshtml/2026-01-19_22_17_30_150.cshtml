@model COJ.Models.HomeViewModel

<div x-data="{ scrolled: false, isMenuOpen: false }"
     @@scroll.window="scrolled = (window.pageYOffset > 50)"
     class="selection:bg-[#D97706] selection:text-white bg-[#FDF9F3] text-[#0A1128]">

    <!-- NAV -->
    <nav :class="scrolled ? 'bg-[#0A1128]/90 backdrop-blur-xl py-4 shadow-2xl border-b border-white/5' : 'bg-transparent py-10'"
         class="fixed w-full z-50 transition-all duration-700 ease-in-out">
        <div class="max-w-screen-2xl mx-auto px-8 md:px-12">

            <!-- Desktop -->
            <div class="hidden lg:grid grid-cols-3 items-center">
                <div class="flex items-center space-x-12">
                    <a href="#home" class="nav-link">Home</a>
                    <a href="#band" class="nav-link">Band</a>
                    <a href="#music" class="nav-link">Music</a>
                </div>

                <div class="flex justify-center">
                    <a href="#home" class="flex flex-col items-center group">
                        <div class="relative mb-1">
                            <div class="absolute -inset-3 bg-[#D97706] rounded-full blur-2xl opacity-0 group-hover:opacity-25 transition-opacity duration-700"></div>
                            <i data-lucide="sparkles" class="relative w-5 h-5 text-[#D97706] mb-1"></i>
                        </div>
                        <span class="text-2xl font-black tracking-[0.6em] uppercase text-white leading-none drop-shadow-[0_20px_40px_rgba(0,0,0,0.35)]">
                            Cup of Joe
                        </span>
                    </a>
                </div>

                <div class="flex justify-end space-x-12 items-center">
                    <a href="#shows" class="nav-link">Shows</a>
                    <a href="#contact"
                       class="px-8 py-2 border border-[#D97706] text-[#D97706] text-[10px] font-bold uppercase tracking-[0.3em] rounded-full
                              hover:bg-[#D97706] hover:text-white transition-all duration-500 shadow-[0_20px_60px_-25px_rgba(217,119,6,0.6)]">
                        Connect
                    </a>
                </div>
            </div>

            <!-- Mobile -->
            <div class="flex lg:hidden justify-between items-center">
                <span class="text-xl font-black tracking-[0.3em] uppercase text-white drop-shadow-[0_20px_40px_rgba(0,0,0,0.35)]">
                    Cup of Joe
                </span>
                <button @@click="isMenuOpen = !isMenuOpen"
                        class="text-white rounded-full w-11 h-11 grid place-items-center bg-white/5 border border-white/10 backdrop-blur-md">
                    <i x-show="!isMenuOpen" data-lucide="menu" class="w-6 h-6"></i>
                    <i x-show="isMenuOpen" data-lucide="x" class="w-6 h-6"></i>
                </button>
            </div>

        </div>

        <!-- Mobile overlay -->
        <div x-show="isMenuOpen" x-cloak
             x-transition.opacity.duration.300ms
             class="fixed inset-0 bg-[#0A1128] z-40 lg:hidden">
            <div class="h-full flex flex-col items-center justify-center space-y-10 text-center px-10">
                <a href="#home" @@click="isMenuOpen=false"
                   class="text-4xl font-black uppercase tracking-tight text-white hover:text-[#D97706] transition-colors">
                    Home
                </a>
                <a href="#band" @@click="isMenuOpen=false"
                   class="text-4xl font-black uppercase tracking-tight text-white hover:text-[#D97706] transition-colors">
                    Band
                </a>
                <a href="#music" @@click="isMenuOpen=false"
                   class="text-4xl font-black uppercase tracking-tight text-white hover:text-[#D97706] transition-colors">
                    Music
                </a>
                <a href="#contact" @@click="isMenuOpen=false"
                   class="mt-6 inline-flex items-center justify-center px-10 py-4 rounded-full bg-[#D97706] text-white text-[11px] font-bold uppercase tracking-[0.35em] shadow-2xl">
                    Connect
                </a>
            </div>
        </div>
    </nav>

    <!-- HERO -->
    <section id="home" class="relative h-screen flex items-center justify-center overflow-hidden bg-[#0A1128]">
        <div class="absolute inset-0 z-0">
            <img src="~/img/cover.jpg" asp-append-version="true"
                 class="w-full h-full object-cover scale-105 slow-zoom opacity-40" />
            <div class="absolute inset-0 bg-gradient-to-b from-[#0A1128] via-black/10 to-[#0A1128]"></div>
            <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_30%,rgba(217,119,6,0.20),transparent_55%)]"></div>
        </div>

        <div class="relative z-10 text-center max-w-5xl px-6">
            <div class="w-px h-20 bg-gradient-to-b from-transparent via-[#D97706] to-transparent mx-auto mb-10 opacity-60"></div>

            <h1 class="text-5xl md:text-8xl font-serif italic text-white leading-tight mb-8 tracking-tighter drop-shadow-[0_30px_60px_rgba(0,0,0,0.45)]">
                Saan nga ba ang <br />
                <span class="not-italic font-black uppercase text-[0.8em] tracking-[0.2em] text-[#D97706]">
                    Patutunguhan
                </span>
            </h1>

            <div class="mt-10 flex flex-col sm:flex-row gap-4 items-center justify-center">
                <a href="#music"
                   class="group relative overflow-hidden px-12 py-5 bg-white/5 border border-white/10 backdrop-blur-md text-white
                          text-[11px] font-bold uppercase tracking-[0.4em] shadow-2xl transition-all duration-500 hover:border-[#D97706]/60">
                    <span class="relative z-10">Explore Music</span>
                    <div class="absolute inset-0 bg-[#D97706]/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                </a>

                <a href="#contact"
                   class="px-12 py-5 bg-[#D97706] text-white text-[11px] font-bold uppercase tracking-[0.4em]
                          shadow-[0_35px_90px_-35px_rgba(217,119,6,0.75)] transition-all duration-500 hover:brightness-110">
                    Book / Inquire
                </a>
            </div>

            <p class="text-white/40 text-[10px] uppercase tracking-[0.6em] font-bold mt-12 animate-pulse">
                Official Artist Page
            </p>
        </div>
    </section>

    <!-- BAND -->
    <section id="band" class="py-40 bg-[#FDF9F3]">
        <div class="max-w-screen-2xl mx-auto px-8">
            <div class="text-center mb-24">
                <h2 class="text-[10px] font-black tracking-[0.8em] uppercase text-[#D97706] mb-4">The Collective</h2>
                <h3 class="text-6xl font-black tracking-tighter text-[#0A1128]">MEET THE LINEUP.</h3>
                <p class="mt-6 text-sm text-slate-500 max-w-2xl mx-auto tracking-wide">
                    Clean portraits, clear roles, and a premium grid that feels editorial—no clutter.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-10">
                @foreach (var member in Model.Members)
                {
                    string imgPath = $"/img/{member.Name.Split(' ')[0].ToLower()}.jpg";

                    <div class="group relative flex flex-col items-center">
                        <div class="relative w-full aspect-[3/4] overflow-hidden rounded-sm mb-6 grayscale group-hover:grayscale-0 transition-all duration-700 shadow-[0_35px_80px_-35px_rgba(0,0,0,0.45)]">
                            <img src="@imgPath"
                                 onerror="this.src='https://images.unsplash.com/photo-1501386761578-eac5c94b800a?q=80&w=400'"
                                 class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110" />

                            <div class="absolute inset-0 bg-gradient-to-t from-black/35 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>

                            <div class="absolute inset-0 border-[14px] border-white/0 group-hover:border-white/12 transition-all duration-700"></div>

                            <div class="absolute bottom-4 left-4 right-4 h-px bg-[#D97706]/0 group-hover:bg-[#D97706]/60 transition-all duration-700"></div>
                        </div>

                        <h4 class="text-lg font-bold uppercase tracking-tight text-[#0A1128]">
                            @member.Name
                        </h4>
                        <p class="text-[9px] font-bold text-[#D97706] uppercase tracking-[0.3em] mt-2 opacity-70 group-hover:opacity-100 transition-opacity">
                            @member.Role
                        </p>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- MUSIC -->
    <section id="music" class="py-40 bg-[#0A1128] text-white overflow-hidden">
        <div class="max-w-screen-2xl mx-auto px-8">
            <div class="flex justify-between items-end mb-24">
                <div>
                    <p class="text-[10px] font-black tracking-[0.8em] uppercase text-[#D97706] mb-4">Discography</p>
                    <h3 class="text-6xl font-black tracking-tighter uppercase">Our Sounds.</h3>
                </div>
                <div class="hidden md:block w-32 h-px bg-[#D97706] opacity-70"></div>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-12">
                @foreach (var album in Model.Discography)
                {
                    <div class="group cursor-pointer">
                        <div class="relative aspect-square bg-white/5 overflow-hidden mb-8 shadow-[0_35px_90px_-45px_rgba(0,0,0,0.65)]
                                        transition-transform duration-500 group-hover:-translate-y-3 border border-white/10 group-hover:border-[#D97706]/50">
                            <img src="@Url.Content(album.Cover)"
                                 class="w-full h-full object-cover opacity-60 group-hover:opacity-100 transition-all duration-700" />

                            <div class="absolute inset-0 bg-gradient-to-t from-black/55 via-transparent to-transparent opacity-70"></div>

                            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                                <div class="w-16 h-16 bg-[#D97706] rounded-full flex items-center justify-center shadow-2xl">
                                    <i data-lucide="play" class="fill-white w-6 h-6"></i>
                                </div>
                            </div>
                        </div>

                        <h3 class="text-xl font-bold uppercase tracking-tight">@album.Title</h3>
                        <p class="text-[10px] font-bold text-[#D97706] uppercase tracking-widest mt-2">
                            @album.Type • @album.Year
                        </p>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- CONTACT -->
    <section id="contact" class="py-40 bg-[#FDF9F3] relative overflow-hidden">
        <div class="absolute top-0 right-0 w-64 h-64 bg-[#D97706]/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>

        <div class="max-w-6xl mx-auto px-8">
            <div class="relative bg-[#0A1128] rounded-sm shadow-[0_50px_120px_-30px_rgba(0,0,0,0.45)] overflow-hidden border border-white/5">
                <div class="flex flex-col lg:flex-row">

                    <!-- Left -->
                    <div class="lg:w-2/5 p-12 lg:p-20 bg-gradient-to-br from-[#0A1128] to-[#0d1a3d] text-white border-r border-white/5">
                        <h2 class="text-[10px] font-black tracking-[0.8em] uppercase text-[#D97706] mb-8">Inquiries</h2>
                        <h3 class="text-5xl font-bold mb-10 tracking-tighter leading-tight">
                            LET'S <br /> COLLABORATE.
                        </h3>

                        <div class="space-y-12">
                            <div class="group">
                                <p class="text-[9px] font-bold uppercase tracking-[0.4em] text-white/40 mb-3">Direct Mail</p>
                                <a href="mailto:hello@cupofjoe.ph"
                                   class="text-lg font-serif italic hover:text-[#D97706] transition-colors">
                                    hello@@cupofjoe.ph
                                </a>
                            </div>

                            <div>
                                <p class="text-[9px] font-bold uppercase tracking-[0.4em] text-white/40 mb-6">Social Presence</p>
                                <div class="flex flex-wrap gap-4">
                                    <a href="#" class="social-icon-btn" title="Facebook"><i data-lucide="facebook" class="w-5 h-5"></i></a>
                                    <a href="#" class="social-icon-btn" title="Instagram"><i data-lucide="instagram" class="w-5 h-5"></i></a>
                                    <a href="#" class="social-icon-btn" title="X"><i data-lucide="twitter" class="w-5 h-5"></i></a>
                                    <a href="#" class="social-icon-btn" title="TikTok"><i data-lucide="music-2" class="w-5 h-5"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Right -->
                    <div class="lg:w-3/5 p-12 lg:p-20 bg-white">
                        <form class="space-y-10">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
                                <div class="border-b border-slate-200 focus-within:border-[#D97706] transition-colors">
                                    <label class="text-[9px] font-black uppercase tracking-[0.3em] text-slate-400">Your Name</label>
                                    <input type="text"
                                           class="w-full py-4 bg-transparent outline-none text-[#0A1128] font-bold placeholder:text-slate-300"
                                           placeholder="NAME">
                                </div>
                                <div class="border-b border-slate-200 focus-within:border-[#D97706] transition-colors">
                                    <label class="text-[9px] font-black uppercase tracking-[0.3em] text-slate-400">Email Address</label>
                                    <input type="email"
                                           class="w-full py-4 bg-transparent outline-none text-[#0A1128] font-bold placeholder:text-slate-300"
                                           placeholder="EMAIL">
                                </div>
                            </div>

                            <div class="border-b border-slate-200 focus-within:border-[#D97706] transition-colors">
                                <label class="text-[9px] font-black uppercase tracking-[0.3em] text-slate-400">Message</label>
                                <textarea rows="3"
                                          class="w-full py-4 bg-transparent outline-none text-[#0A1128] font-bold placeholder:text-slate-300 resize-none"
                                          placeholder="HOW CAN WE HELP?"></textarea>
                            </div>

                            <button class="relative overflow-hidden group bg-[#0A1128] text-white px-12 py-5 text-[11px] font-bold uppercase tracking-[0.4em] shadow-2xl transition-all">
                                <span class="relative z-10">Send Message</span>
                                <div class="absolute inset-0 bg-[#D97706] translate-y-full group-hover:translate-y-0 transition-transform duration-500"></div>
                            </button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </section>

    <!-- Minimal CSS only for 2 effects -->
    <style>
        .nav-link {
            font-size: 10px;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: .35em;
            color: rgba(255,255,255,.9);
            position: relative;
            transition: color .35s ease;
        }

            .nav-link:hover {
                color: #D97706;
            }

            .nav-link::after {
                content: "";
                position: absolute;
                left: 0;
                bottom: -10px;
                width: 100%;
                height: 2px;
                background: linear-gradient(90deg, rgba(217,119,6,0), rgba(217,119,6,1), rgba(217,119,6,0));
                transform: scaleX(0);
                transform-origin: left;
                transition: transform .45s ease;
                opacity: .85;
            }

            .nav-link:hover::after {
                transform: scaleX(1);
            }

        .slow-zoom {
            animation: slowZoom 18s ease-in-out infinite alternate;
        }

        @@keyframes slowZoom {
            from {
                transform: scale(1.05);
            }

            to {
                transform: scale(1.14);
            }
        }

        .social-icon-btn {
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 1px solid rgba(255, 255, 255, 0.10);
            border-radius: 9999px;
            color: white;
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

            .social-icon-btn:hover {
                border-color: #D97706;
                color: #D97706;
                transform: translateY(-5px);
                box-shadow: 0 10px 20px -5px rgba(217, 119, 6, 0.30);
            }

            .social-icon-btn::after {
                content: '';
                position: absolute;
                inset: 0;
                background: #D97706;
                opacity: 0;
                transition: opacity 0.5s;
                filter: blur(18px);
                z-index: -1;
            }

            .social-icon-btn:hover::after {
                opacity: .18;
            }
    </style>

</div>
